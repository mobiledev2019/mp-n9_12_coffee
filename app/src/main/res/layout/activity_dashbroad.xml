<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <android.support.v7.widget.Toolbar
            app:titleTextColor="@color/colorWhite"
            android:background="@color/colorLavander"
            android:id="@+id/dashbroad_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp">
        </android.support.v7.widget.Toolbar>
        <GridLayout
            android:layout_below="@id/dashbroad_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                app:cardCornerRadius="5dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="2"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnSpan="2"
                android:layout_rowSpan="1">
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ProgressBar
                        android:id="@+id/progressbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <com.github.mikephil.charting.charts.CombinedChart
                        android:id="@+id/income_chart"
                        android:layout_weight="9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </com.github.mikephil.charting.charts.CombinedChart>
                    <Button
                        android:textColor="#FFF"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="@string/income"
                        android:id="@+id/income_status"
                        android:background="@color/colorLavanderDark"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:onClick="onItemView"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="1dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                app:cardCornerRadius="5dp"
                android:layout_row="2">
                <LinearLayout
                    android:weightSum="6"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:background="@color/colorLavander"
                        android:layout_weight="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <ImageView
                            android:contentDescription="@string/item_dash"
                            android:layout_gravity="center"
                            android:src="@drawable/item_dash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </FrameLayout>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:textSize="20sp"
                        android:text="@string/item_dash"
                        android:gravity="center"
                        android:background="@color/colorLavanderDark"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:onClick="onStaffView"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="1dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                app:cardCornerRadius="5dp"
                android:layout_row="2">
                <LinearLayout
                    android:weightSum="6"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:background="@color/colorLavander"
                        android:layout_weight="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:contentDescription="@string/staff_dash"
                            android:layout_gravity="center"
                            android:src="@drawable/staff_dash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </FrameLayout>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="#FFF"
                        android:textSize="20sp"
                        android:text="@string/staff_dash"
                        android:gravity="center"
                        android:background="@color/colorLavanderDark"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="5dp"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_columnSpan="2">
                <LinearLayout
                    android:weightSum="6"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <FrameLayout
                        android:background="@color/colorLavander"
                        android:layout_weight="5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <ImageView
                            android:contentDescription="@string/schedule_dash"
                            android:layout_gravity="center"
                            android:src="@drawable/schedule_dash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </FrameLayout>
                    <TextView
                        android:textStyle="bold"
                        android:text="@string/schedule_dash"
                        android:textColor="#FFF"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="@color/colorLavanderDark"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </GridLayout>
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/Nav_Left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>